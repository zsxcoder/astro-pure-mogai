---
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'

const meta = {
  description: 'Not found',
  title: '404'
}
---

<PageLayout {meta}>
  <div class='px-4 py-10 text-center sm:px-6 lg:px-8'>
    <h1 class='block text-7xl font-bold sm:text-9xl'>404</h1>
    <p class='mt-3 text-muted-foreground flex justify-between items-center'>
      <span>Oops, something went wrong.</span>
      <span>页面不存在</span>
    </p>
    <p class='text-lg flex justify-between items-center'>
      <span>Sorry, we couldn't find your page.</span>
      <span>很抱歉，我们找不到您请求的页面</span>
    </p>
    <p class='text-lg flex justify-between items-center'>
      <span>Please check the URL or go back to the home page.</span>
      <span>请检查URL或返回首页</span>
    </p>
    <Button title='Back to home' href='/' variant='ahead' class='mt-5' />
  </div>
</PageLayout>