---
interface Props {
  img?: string;
  text?: string;
  link?: string;
  round?: boolean;
  square?: boolean;
}

const { img, text, link, round: propRound, square: propSquare } = Astro.props;

// 辅助函数：获取GitHub用户名
function getGhUsername(link?: string): string | null {
  if (!link) return null;
  const ghRegex = /github\.com\/(\w+)/i;
  const match = link.match(ghRegex);
  return match ? match[1] : null;
}

// 辅助函数：获取GitHub头像
function getGhAvatar(username: string): string {
  return `https://github.com/${username}.png`;
}

// 辅助函数：检查是否为外部链接
function isExtLink(link: string): boolean {
  return link.startsWith('http') || link.startsWith('https');
}

// 辅助函数：获取域名
function getDomain(url: string): string {
  try {
    const urlObj = new URL(url);
    return urlObj.hostname;
  } catch {
    return url;
  }
}

// 辅助函数：获取favicon
function getFavicon(domain: string): string {
  return `https://www.google.com/s2/favicons?domain=${domain}&sz=32`;
}

// 辅助函数：安全解码URI组件
function safelyDecodeUriComponent(uri: string): string {
  try {
    return decodeURIComponent(uri);
  } catch {
    return uri;
  }
}

// 计算实际图片URL
let computedImg = img;
if (!computedImg && link) {
  const ghUsername = getGhUsername(link);
  if (ghUsername) {
    computedImg = getGhAvatar(ghUsername);
  } else if (isExtLink(link)) {
    computedImg = getFavicon(getDomain(link));
  }
}

// 计算圆角样式
// 有图时默认为圆形样式，除非指定为方形
// 无图时默认为方形样式，除非指定为圆形
const isRound = computedImg ? !propSquare : propRound;

// 计算提示文本
const tip = link ? (isExtLink(link) ? getDomain(link) : safelyDecodeUriComponent(link)) : '';
---

<!-- 根据是否有链接选择渲染标签 -->
{link ? (
  <a 
    href={link} 
    class={`badge ${isRound ? 'round' : ''}`}
    target={isExtLink(link) ? '_blank' : '_self'}
    rel={isExtLink(link) ? 'noopener noreferrer' : ''}
    title={tip}
  >
    {computedImg && (
      <img 
        class="badge-icon" 
        src={computedImg} 
        alt={text || 'badge icon'}
      />
    )}
    <span class="badge-text">
      <!-- 正确处理slot默认内容 -->
      <slot>
        {text}
      </slot>
    </span>
  </a>
) : (
  <span 
    class={`badge ${isRound ? 'round' : ''}`}
    title={tip}
  >
    {computedImg && (
      <img 
        class="badge-icon" 
        src={computedImg} 
        alt={text || 'badge icon'}
      />
    )}
    <span class="badge-text">
      <!-- 正确处理slot默认内容 -->
      <slot>
        {text}
      </slot>
    </span>
  </span>
)}

<style scoped>
/* 对齐到基线，同时保持图片垂直居中 */
