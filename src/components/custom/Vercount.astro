---
import { vercount } from '@/site-config'
---

{
  vercount.enable && (
    <div class='rounded-2xl border bg-card p-4'>
      <div class='flex items-center gap-2 mb-4 text-base font-medium'>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='20'
          height='20'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='text-primary'
        >
          <>
            <path d='M3 3v18h18' />
            <path d='M18 17V9' />
            <path d='M13 17V5' />
            <path d='M8 17v-3' />
          </>
        </svg>
        网站访问统计
      </div>
      <div class='grid grid-cols-1 gap-4'>
        <div class='flex flex-row items-center justify-between rounded-xl bg-muted/50 p-3 transition-colors hover:bg-muted'>
          <span class='text-xs text-muted-foreground'>总访问量</span>
          <span id='vercount_value_site_pv' class='text-lg font-semibold'>
            Loading...
          </span>
        </div>
        <div class='flex flex-row items-center justify-between rounded-xl bg-muted/50 p-3 transition-colors hover:bg-muted'>
          <span class='text-xs text-muted-foreground'>总访客数</span>
          <span id='vercount_value_site_uv' class='text-lg font-semibold'>
            Loading...
          </span>
        </div>
        <div class='flex flex-row items-center justify-between rounded-xl bg-muted/50 p-3 transition-colors hover:bg-muted'>
          <span class='text-xs text-muted-foreground'>页面浏览</span>
          <span id='vercount_value_page_pv' class='text-lg font-semibold'>
            Loading...
          </span>
        </div>
      </div>
    </div>
  )
}
